
<!DOCTYPE html>
<html lang="en">
<html>
  <head>
    <title>Myfabricstash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

<!--   BOOTSTRAP -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<!--   BOOTSTRAP -->

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


<!--   BOOTSTRAP NAV -->
<div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">MyFabricStash</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        </li>
        
    <% if @current_user %>

        <li class="nav-item">
          <%= link_to 'Sign Out', sign_out_path, class: 'nav-item nav-link active', method: :delete %>
        </li>

        <li class="nav-item">
            <%= link_to 'Your Account', user_path(@current_user), class: 'nav-item nav-link active' %>
        </li>

    
    <% else %>


        <li class="nav-item">
          <%= link_to 'Sign in', sign_in_path, class: 'nav-item nav-link active', method: :get %>
        </li>

        <li class="nav-item">
          <%= link_to 'Sign Up', sign_up_path, class: 'nav-item nav-link active', method: :get %>
        </li>

    <% end %>

      </ul>
    </div>
  </nav>

<!--   BOOTSTRAP NAV -->

    <%= yield %>

<!--   BOOTSTRAP -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<!--   BOOTSTRAP -->  
  
  </body>
</html>
