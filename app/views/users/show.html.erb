		      <h5 class="card-title"><%= fabric.fabric_name%></h5>
		      <p class="card-text"><%= fabric.fabric_description%></p>


<!--               Listing fibre types -->
		      <p class="card-text"><small class="text-muted">Composition: 
				      	
				      	<%= fabric.fibre.each do |fibre| %>
